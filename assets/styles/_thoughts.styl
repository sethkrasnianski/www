#thoughts
  width: 83.33333%
  a
    text-decoration: none
  article
    position: relative
    margin-bottom: 75px
    margin-top: 37.5px
    &:hover aside
      opacity: 0.75
  aside
    font-weight: bold
    left: -48px
    opacity: 0
    position: absolute
    text-align: center
    top: 7px
    transition: opacity, 0.35s, ease
    .month, .day
      font-family: $font-secondary
    .month
      text-transform: uppercase
    .day
      font-size: 31px
