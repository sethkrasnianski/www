{
  "build": "public",
  "port": "3883",
  "livereload": [
    "html",
    "jpg",
    "js",
    "png"
  ],
  "jade": {
    "views": {
      "base": "views",
      "src": "views/**/*.jade",
      "open": "index.html"
    },
    "templates": {
      "src": "views/templates/**/*.jade"
    }
  },
  "scripts": {
    "project": {
      "src": "assets/scripts/main.js",
      "watch": "assets/scripts/**/*.js",
      "out": "main.js",
      "lint": "assets/scripts/**/*.js"
    },
    "vendor": {
      "src": [
        "bower_components/modernizr/modernizr.js"
      ],
      "out": "vendor.js"
    },
    "dest": "public/js"
  },
  "styles": {
    "project": {
      "src": "assets/styles/*.styl",
      "watch": "assets/styles/**/*",
      "dest": "public/css",
      "out": "main.css",
      "browsers": ["last 5 versions"]
    },
    "vendor": {
      "src": [
        "bower_components/normalize.styl/normalize.styl"
      ],
      "dest": "assets/styles/vendor"
    }
  },
  "images": {
    "src": "assets/images/**/*",
    "dest": "public/images"
  },
  "thoughts": {
    "markdown": "thoughts/*.md",
    "view": {
      "jade": "thoughts/thought.jade",
      "out": "public/thoughts"
    }
  },
  "freelance": "not available"
}
